<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_kelime_ekle"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="100dp"
    android:gravity="center|top"
    android:orientation="vertical"
    tools:context="com.sabihamumcu.kelimekutusu.KelimeEkle">

    <EditText
        android:id="@+id/kelimeAdi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Yeni kelimeyi giriniz:"
        android:padding="15dp"/>

    <EditText
        android:id="@+id/kelimeTanimi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Kelimenin anlamini giriniz:"
        android:padding="15dp"/>

    <Button
        android:id="@+id/ekle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:onClick="addWord"
        android:text="Ekle"/>


</LinearLayout>
